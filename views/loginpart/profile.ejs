
<header class="header">
 <% include header.ejs %>
</header>
 <div class="container">
  <div class="page-header text-center">
   <h1>My Profile</h1>
   <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
  </div>

  <div class="row">
   <div class="col-sm-12">
    <div class="well">
     <h3><span class="fa fa-user"></span> Welcome <%= user.username %></h3>

     <p>
      <strong>id</strong> <%= user.id %> <br>
      <strong>username</strong> <%= user.username %> <br>
     </p>
    </div>
   </div>
  </div>
 </div>

 <div class="table-wrapper">
  <% if (notifications) {%>
   <table class="table table-hovered">
    <thead class="thead-dark">
    <tr>
     <th scope="col">ID</th>
     <th scope="col">Image</th>
     <th scope="col">Notification Name</th>
     <th scope="col">Description</th>
     <th scope="col">Type</th>
     <th scope="col">Hour</th>
     <th scope="col">Username</th>
     <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    <% notifications.forEach((notification, index) => { %>
     <tr>
      <th scope="row"><%= notification.id %></th>
      <td><img src="/assets/img/<%= notification.image %>" class="rounded-circle notification-img" alt=""></td>
      <td><%= notification.not_name %></td>
      <td><%= notification.not_description %></td>
      <td><%= notification.not_type %></td>
      <td><%= notification.not_hour %></td>
      <td><%= notification.username %></td>
      <td>
       <a href="/edit/<%= notification.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
       <a href="/delete/<%= notification.id %>" class="btn btn-sm btn-danger">Delete</a>
      </td>
     </tr>
    <% }) %>
    </tbody>
   </table>
  <% } else { %>
   <p class="text-center">No notifications found. Go <a href="/add" >here</a> to add notifications.</p>
  <% } %>
 </div>
<footer>
 <% include footer.ejs %>
</footer>