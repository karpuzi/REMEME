<header class="header">
    <% include partials/header.ejs %>
</header>
<div class="container">
    <% if (message != '') { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>
    <form class="add-notification-form" action="" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-4">
                <input type="text" class="form-control" name="not_name" id="not_name" placeholder="Notification Name" required>
            </div>
            <div class="form-group col-md-4">
                <input type="text" class="form-control" name="not_description" id="not_description" placeholder="Description" required>
            </div>
            <div class="form-group col-md-4">
                <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <input type="number" class="form-control" name="not_hour" id="not_hour" placeholder="Hour" required>
            </div>
            <div class="form-group col-md-6">
                <select id="not_type" name="not_type" class="form-control" required>
                    <option selected disabled>Choose type</option>
                    <option>Alarm Clock</option>
                    <option>Reminder</option>
                    <option>Question</option>
                    <option>Scale</option>
                </select>
            </div>
            <div class="col-md-12">
                <label for="notification-img"><b>Notification Image</b></label><br>
                <input type="file" name="image" id="notification-img" class="" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary float-right">Add Notification</button>
    </form>
</div>
</div>

</body>
</html>
